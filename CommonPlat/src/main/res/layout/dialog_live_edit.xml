<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_searchlike"
            android:layout_width="0dp"
            android:layout_height="33.3dp"
            android:layout_marginLeft="5.3dp"
            android:layout_weight="1"
            android:background="@drawable/background_circle_live_edit"
            android:ellipsize="end"
            android:hint="点击输入评论内容"
            android:paddingLeft="9.3dp"
            android:singleLine="true"
            android:textColor="#16181a"
            android:textColorHint="@color/gray"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:src="@mipmap/icon_send_n" />
    </LinearLayout>

</LinearLayout>