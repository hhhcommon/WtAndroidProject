<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wotingfm">
    <!-- supportsRtl 从左到右 -->
    <!-- android:screenOrientation="portrait" 强制竖屏 -->

    <application
        android:name="com.wotingfm.common.application.BSApplication"
        android:allowBackup="false"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/app_logo"
        android:label="@string/app_name"
        android:supportsRtl="false">

        <!-- 启动页 -->
        <activity
            android:name=".ui.user.splash.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 引导页 -->
        <activity
            android:name="com.wotingfm.ui.user.guide.view.GuideActivity"
            android:screenOrientation="portrait"
            android:theme="@style/GuideTheme">
        </activity>

        <!-- 主页 -->
        <activity
            android:name=".ui.main.view.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <!-- 网页调用 待定-->
                <data android:scheme="com.woting.htmlcallback" />
            </intent-filter>
        </activity>


        <!-- 偏好设置 -->
        <activity
            android:name="com.wotingfm.ui.user.preference.PreferenceActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Light.NoTitleBar" />

        <!-- 登录主页 -->
        <activity
            android:name="com.wotingfm.ui.user.logo.LogoActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Light.NoTitleBar" />

        <!-- 登录页 -->
        <activity
            android:name=".ui.user.login.view.LoginActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Light.NoTitleBar" />

        <!-- 注册页 -->
        <activity
            android:name=".ui.user.register.view.RegisterActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Light.NoTitleBar" />

        <!-- 忘记密码页 -->
        <activity
            android:name=".ui.user.retrievepassword.view.RetrievePassWordActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Light.NoTitleBar" />


        <!-- 扫一扫 -->
        <activity
            android:name="com.wotingfm.ui.scanning.activity.CaptureActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Light.NoTitleBar" />


        <!-- 扫一扫结果 -->
        <activity
            android:name="com.wotingfm.ui.scanning.activity.ResultActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Light.NoTitleBar" />

        <!-- 对讲主页 -->
        <activity
            android:name=".ui.intercom.main.view.InterPhoneActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Light.NoTitleBar" />

        <!--  -->
        <activity
            android:name=".ui.test.PlayerActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Light.NoTitleBar" />

        <!--  -->
        <activity
            android:name=".ui.test.DuiJiangActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Light.NoTitleBar" />

        <!--  -->
        <activity
            android:name=".ui.test.MineActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Light.NoTitleBar" />

        <service android:name=".common.service.FloatingWindowService" />

    </application>
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

</manifest>