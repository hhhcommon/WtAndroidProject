<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wotingfm">

    <!-- 权限声明 -->
    <!-- 访问网络状态-->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!-- 控制呼吸灯，振动器等，用于新消息提醒 -->
    <uses-permission android:name="android.permission.FLASHLIGHT" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <!-- 外置存储存取权限 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <!-- 多媒体相关 -->
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <!-- 如果需要实时音视频通话模块，下面的权限也是必须的。否则，可以不加 -->
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />
    <uses-permission android:name="android.permission.BROADCAST_STICKY" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <!-- supportsRtl 从左到右 -->
    <!-- android:screenOrientation="portrait" 强制竖屏 -->
    <application
        android:name="com.wotingfm.common.application.BSApplication"
        android:allowBackup="false"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/app_logo"
        android:label="@string/app_name"
        android:supportsRtl="false"
        android:theme="@style/AppBlackTheme">

        <!-- 启动页 -->
        <activity
            android:name=".ui.user.splash.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 引导页 -->
        <activity
            android:name="com.wotingfm.ui.user.guide.view.GuideActivity"
            android:screenOrientation="portrait"
            android:theme="@style/GuideTheme"></activity>

        <!-- 主页 -->
        <activity
            android:name=".ui.main.view.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBar"></activity>


        <!-- 登录主页 -->
        <activity
            android:name="com.wotingfm.ui.user.logo.LogoActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />


        <!-- 播放历史 -->
        <activity
            android:name=".ui.play.activity.PlayerHistoryActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <!-- 我的订阅 -->
        <activity
            android:name=".ui.play.activity.MeSubscribeListActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <!-- 发现的首页 -->
        <activity
            android:name=".ui.play.look.activity.LookListActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <!-- 发现的首页  更多 -->
        <activity
            android:name=".ui.play.look.activity.SelectedMoreActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <!-- 界面举报 -->
        <activity
            android:name=".ui.play.activity.ReportsPlayerActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <!-- 主播个人中心 -->
        <activity
            android:name=".ui.play.activity.AnchorPersonalCenterActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <!-- 搜索 -->
        <activity
            android:name=".ui.play.look.activity.serch.SerchActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <!-- 个人专辑列表 -->
        <activity
            android:name=".ui.play.activity.albums.AlbumsListActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <!-- 小分类列表 -->
        <activity
            android:name=".ui.play.look.activity.classification.ClassificationActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <!-- 专辑，节目，下载中 -->
        <activity
            android:name=".ui.play.activity.download.DownloadProgramActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <!-- 专辑详情 -->
        <activity
            android:name=".ui.play.activity.albums.AlbumsInfoActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <!--下载选择 -->
        <activity
            android:name=".ui.play.activity.download.DownloadSelectActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />


        <!-- 扫一扫 -->
        <activity
            android:name="com.wotingfm.ui.intercom.scanning.activity.CaptureActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />


        <!-- 扫一扫结果 -->
        <activity
            android:name="com.wotingfm.ui.intercom.scanning.activity.ResultActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />

        <!-- 对讲主页 -->
        <activity
            android:name=".ui.intercom.main.view.InterPhoneActivity"
            android:screenOrientation="portrait"
            android:theme="@style/MyAppTheme" />

        <!-- 图片剪切 -->
        <activity
            android:name="com.wotingfm.ui.photocut.PhotoCutActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Light.NoTitleBar" />

        <!--  -->
        <activity
            android:name=".ui.test.PlayerActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />

        <!--  -->
        <activity
            android:name=".ui.mine.main.MineActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />

        <service android:name=".common.service.FloatingWindowService" />
        <!-- IM -->
        <meta-data
            android:name="com.netease.nim.appKey"
            android:value="14fb7ad37a6489960435071dd1b0c837" />

        <uses-library
            android:name="com.google.android.maps"
            android:required="false" />

        <activity
            android:name="com.netease.nim.chatroom.demo.entertainment.activity.IdentifyActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar" />


        <activity
            android:name="com.netease.nim.chatroom.demo.entertainment.activity.AudienceActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden|adjustNothing" />

        <activity
            android:name="com.netease.nim.chatroom.demo.entertainment.activity.LiveActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden|adjustNothing" />

        <activity
            android:name="com.netease.nim.chatroom.demo.entertainment.activity.EnterRoomActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:windowSoftInputMode="stateHidden|adjustResize" />

        <activity
            android:name="com.netease.nim.chatroom.demo.entertainment.activity.InputActivity"
            android:theme="@style/InputActivityTheme"
            android:windowSoftInputMode="stateUnspecified|adjustResize" />

        <!-- end entertainment -->

        <!-- 声明云信后台服务 -->
        <service
            android:name="com.netease.nimlib.service.NimService"
            android:process=":core" />

        <service
            android:name="com.netease.nimlib.service.NimService$Aux"
            android:process=":core" />

        <!-- 云信SDK的监视系统启动和网络变化的广播接收器，用户开机自启动以及网络变化时候重新登录 -->
        <receiver
            android:name="com.netease.nimlib.service.NimReceiver"
            android:exported="false"
            android:process=":core">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>

        <!-- 云信进程间通信receiver -->
        <receiver android:name="com.netease.nimlib.service.ResponseReceiver" />
    </application>
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />


</manifest>