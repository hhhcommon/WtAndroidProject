<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wotingfm">
    <!-- supportsRtl 从左到右 -->
    <!-- android:screenOrientation="portrait" 强制竖屏 -->

    <application
        android:name="com.wotingfm.common.application.BSApplication"
        android:allowBackup="false"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/app_logo"
        android:label="@string/app_name"
        android:theme="@style/AppBlackTheme"
        android:supportsRtl="false">

        <!-- 启动页 -->
        <activity
            android:name=".ui.user.splash.SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 引导页 -->
        <activity
            android:name="com.wotingfm.ui.user.guide.view.GuideActivity"
            android:screenOrientation="portrait"
            android:theme="@style/GuideTheme"></activity>

        <!-- 主页 -->
        <activity
            android:name=".ui.main.view.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBar">
        </activity>


        <!-- 登录主页 -->
        <activity
            android:name="com.wotingfm.ui.user.logo.LogoActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme"/>


        <!-- 播放历史 -->
        <activity
            android:name=".ui.play.activity.PlayerHistoryActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <!-- 我的订阅 -->
        <activity
            android:name=".ui.play.activity.MeSubscribeListActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <!-- 界面举报 -->
        <activity
            android:name=".ui.play.activity.ReportsPlayerActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <!-- 主播个人中心 -->
        <activity
            android:name=".ui.play.activity.AnchorPersonalCenterActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <!-- 个人专辑列表 -->
        <activity
            android:name=".ui.play.activity.albums.AlbumsListActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <!-- 专辑，节目，下载中 -->
        <activity
            android:name=".ui.play.activity.download.DownloadProgramActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <!-- 专辑详情 -->
        <activity
            android:name=".ui.play.activity.albums.AlbumsInfoActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />


        <!-- 扫一扫 -->
        <activity
            android:name="com.wotingfm.ui.intercom.scanning.activity.CaptureActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />


        <!-- 扫一扫结果 -->
        <activity
            android:name="com.wotingfm.ui.intercom.scanning.activity.ResultActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />

        <!-- 对讲主页 -->
        <activity
            android:name=".ui.intercom.main.view.InterPhoneActivity"
            android:screenOrientation="portrait"
            android:theme="@style/MyAppTheme" />

        <!-- 图片剪切 -->
        <activity
            android:name="com.wotingfm.ui.photocut.PhotoCutActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Light.NoTitleBar" />

        <!--  -->
        <activity
            android:name=".ui.test.PlayerActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />

        <!--  -->
        <activity
            android:name=".ui.mine.main.MineActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />

        <service android:name=".common.service.FloatingWindowService" />

    </application>
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

</manifest>