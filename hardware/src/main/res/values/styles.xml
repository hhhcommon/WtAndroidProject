<resources>

    <!-- Base application theme. -->
    <style name="AppBlackTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/app_basic</item>
    </style>
    <style name="NoActionBar" parent="Theme.AppCompat.Light.NoActionBar" > </style>


    <!--1.colorPrimary 应用的主要色调，actionBar默认使用该颜色，Toolbar导航栏的底色-->
    <!--2.colorPrimaryDark 应用的主要暗色调，statusBarColor默认使用该颜色-->
    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorAccent">@color/app_basic</item>
    </style>

    <style name="AppTheme" parent="@style/BaseAppTheme" />

    <!-- Activity无标题栏 开始 -->
    <style name="MyAppTheme" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <!--启动页主题-->
    <style name="SplashTheme" parent="@android:style/Theme.Light.NoTitleBar.Fullscreen">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <!--启动页主题-->
    <style name="GuideTheme" parent="@android:style/Theme.Light.NoTitleBar.Fullscreen">
        <item name="android:windowBackground">@drawable/background_guide</item>
    </style>


    <style name="progressbar_style1">
        <item name="android:maxWidth">24.0dip</item>
        <item name="android:maxHeight">24.0dip</item>
        <item name="android:indeterminateDrawable">@anim/anim_loading1</item>
        <item name="android:minWidth">24.0dip</item>
        <item name="android:minHeight">24.0dip</item>
    </style>

    <declare-styleable name="MaxHeightView">
        <attr name="mhv_HeightRatio" format="reference|float" />
        <attr name="mhv_HeightDimen" format="reference|dimension" />
    </declare-styleable>
    <!--左上角返回图片 Style-->
    <style name="LeftImageStyle">
        <item name="android:layout_width">44dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:src">@mipmap/nav_icon_back_black</item>
    </style>

    <!--标头中间字体 Style-->
    <style name="HeadWordStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black_head_word</item>
        <item name="android:textSize">17sp</item>
    </style>

    <!--个人中心标识文字-->
    <style name="MineIdentifyingTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/black_head_word</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingLeft">16dp</item>
    </style>

    <!-- 个人中心 Relative -->
    <style name="MineRelativeStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:background">@drawable/wt_view_click_background</item>
        <item name="android:clickable">true</item>
    </style>

    <!-- 个人中心 LeftImage -->
    <style name="MineLeftImageStyle">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_marginLeft">12dp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <!-- 个人中心 TextView -->
    <style name="MineTextStyle" parent="WrapContent">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/black_head_word</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- 个人中心 RightImage -->
    <style name="MineRightImageStyle">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:src">@mipmap/chat_icon_next</item>
    </style>

    <style name="BottomDialog" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@style/Animation.Design.BottomSheetDialog</item>
    </style>

    <style name="inOutStyle" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/wt_slide_in_from_bottom</item>
        <item name="@android:windowExitAnimation">@anim/wt_slide_out_from_bottom</item>
    </style>

    <style name="Theme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/gray</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/red</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="Base.Widget.TabLayout" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/TextAppearance.TabLayout.Tab</item>
        <item name="tabMode">scrollable</item>
        <item name="tabGravity">fill</item>
        <item name="tabIndicatorColor">#ffffff</item>
        <item name="tabSelectedTextColor">#fd8548</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabPaddingStart">14sp</item>
        <item name="tabPaddingEnd">14sp</item>
    </style>

    <style name="Base.TextAppearance.TabLayout.Tab" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#16181a</item>
    </style>

    <style name="Widget.TabLayout" parent="Base.Widget.TabLayout" />

    <style name="TextAppearance.TabLayout.Tab" parent="Base.TextAppearance.TabLayout.Tab" />
</resources>
