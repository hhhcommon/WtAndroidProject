<resources>


    <style name="AppBaseTheme" parent="Theme.AppCompat.NoActionBar"></style>

    <!--启动页主题-->
    <style name="SplashTheme" parent="@android:style/Theme.Light.NoTitleBar.Fullscreen">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>
    <!--启动页主题-->
    <style name="GuideTheme" parent="@android:style/Theme.Light.NoTitleBar.Fullscreen">
        <item name="android:windowBackground">@drawable/background_guide</item>
    </style>
    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <!-- Activity无标题栏 开始 -->
    <style name="MyAppTheme" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <declare-styleable name="MaxHeightView">
        <attr name="mhv_HeightRatio" format="reference|float" />
        <attr name="mhv_HeightDimen" format="reference|dimension" />
    </declare-styleable>
    <!--左上角返回图片 Style-->
    <style name="LeftImageStyle">
        <item name="android:layout_width">44dp</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:layout_marginLeft">2dp</item>
        <item name="android:src">@mipmap/nav_icon_back_black</item>
    </style>

    <!--标头中间字体 Style-->
    <style name="HeadWordStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black_head_word</item>
        <item name="android:textSize">22sp</item>
    </style>

    <!--个人中心标识文字-->
    <style name="MineIdentifyingTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">47dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/black_head_word</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingLeft">16dp</item>
    </style>

    <!-- 个人中心 Relative -->
    <style name="MineRelativeStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">58dp</item>
        <item name="android:background">@drawable/wt_view_click_background</item>
        <item name="android:clickable">true</item>
    </style>

    <!-- 个人中心 LeftImage -->
    <style name="MineLeftImageStyle">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <!-- 个人中心 TextView -->
    <style name="MineTextStyle" parent="WrapContent">
        <item name="android:layout_marginLeft">14dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/black_head_word</item>
        <item name="android:textSize">20sp</item>
    </style>

    <!-- 个人中心 RightImage -->
    <style name="MineRightImageStyle">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:src">@mipmap/chat_icon_next</item>
    </style>

    <style name="BottomDialog" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@style/Animation.Design.BottomSheetDialog</item>
    </style>
</resources>
