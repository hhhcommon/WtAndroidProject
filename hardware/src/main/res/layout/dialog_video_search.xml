<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/relatLable"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#efefef"
            android:src="@mipmap/nav_icon_back_black" />

        <EditText
            android:id="@+id/et_searchlike"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/ivBack"
            android:background="@color/white"
            android:ellipsize="end"
            android:gravity="center|left"
            android:hint="请输入您要搜索的内容"
            android:imeOptions="actionSearch"
            android:paddingLeft="12dp"
            android:singleLine="true"
            android:textColor="#16181a"
            android:textColorHint="@color/gray"
            android:textCursorDrawable="@drawable/ed_cursor"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvSubmitSerch"
            android:layout_width="61dp"
            android:layout_height="29dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:background="@drawable/serch_bg"
            android:gravity="center"
            android:text="搜索"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </RelativeLayout>
</LinearLayout>