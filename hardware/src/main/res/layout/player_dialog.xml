<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/share_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_above="@+id/share_dialog_row1"
        android:layout_marginLeft="12dp"
        android:drawableLeft="@mipmap/icon_playlists_black"
        android:drawablePadding="5dp"
        android:gravity="center|left"
        android:text="播放列表"
        android:textColor="#16181a"
        android:textSize="14.7sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="@color/line_color" />
        <com.woting.commonplat.amine.ARecyclerView
            android:id="@+id/mRecyclerViewList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:loadMoreEnabled="false"
            android:scrollbars="none"
            app:loadMoreFooterLayout="@layout/layout_irecyclerview_load_more_footer"
            app:refreshEnabled="true"
            app:refreshHeaderLayout="@layout/layout_irecyclerview_refresh_header" />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="@color/line_color" />

        <TextView
        android:id="@+id/tvClose"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/wt_view_click_background"
        android:text="关闭"
        android:textColor="#16181a"
        android:textSize="16sp" />
</LinearLayout>