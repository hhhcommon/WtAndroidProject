<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/largeLabel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="6dp"
    android:paddingRight="6dp"
    android:paddingBottom="16dp"
    >

    <FrameLayout
        android:id="@+id/fragmentTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivPhotoBg"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/oval_defut_other" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_color_bg"
            android:orientation="horizontal"
            android:padding="8dp">

            <TextView
                android:id="@+id/tvType"
                android:layout_width="42dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:background="@drawable/live_bg"
                android:gravity="center"
                android:text="直播中"
                android:textColor="@color/white"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tvNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center"
                android:gravity="end"
                android:lineSpacingExtra="0sp"
                android:shadowColor="#33000000"
                android:shadowDx="0"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:text="2398人"
                android:textColor="#ffffff"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:lineSpacingExtra="0sp"
            android:padding="8dp"
            android:shadowColor="#33000000"
            android:shadowDx="0"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:text="麦芽的春天"
            android:textColor="#ffffff"
            android:textSize="13sp" />
    </FrameLayout>

    <TextView
        android:id="@+id/tvContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lineSpacingExtra="5sp"
        android:paddingTop="6dp"
        android:text="520，你在哪里"
        android:textColor="#16181a"
        android:textSize="13sp" />
</LinearLayout>
