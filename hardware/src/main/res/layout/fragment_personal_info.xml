<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingTop="20dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_color"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="44dp">

            <ImageView
                android:id="@+id/head_left_btn"
                style="@style/LeftImageStyle"/>

            <TextView
                android:id="@+id/tv_center"
                android:text="名称"
                android:layout_centerInParent="true"
                style="@style/HeadWordStyle"/>

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_color" />

        <RelativeLayout
            android:id="@+id/view_head_portrait"
            style="@style/MineRelativeStyle"
            android:layout_height="70dp">

            <TextView
                style="@style/MineTextStyle"
                android:text="@string/head_portrait" />

            <ImageView
                android:id="@+id/image_right_1"
                style="@style/MineRightImageStyle" />

            <ImageView
                android:id="@+id/image_head"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/image_right_1"
                android:src="@mipmap/icon_avatar_d" />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_color" />

        <RelativeLayout
            android:id="@+id/view_nickname"
            style="@style/MineRelativeStyle"
            android:layout_height="44dp">

            <TextView
                style="@style/MineTextStyle"
                android:text="@string/nickname" />

            <ImageView
                android:id="@+id/image_right_2"
                style="@style/MineRightImageStyle" />

            <TextView
                android:id="@+id/text_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/image_right_2"
                android:src="@mipmap/app_logo"
                android:text="莉莉"
                android:textColor="@color/exhibition_world_color"
                android:textSize="14sp" />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_color" />

        <LinearLayout
            android:id="@+id/view_brief_introduction"
            style="@style/MineRelativeStyle"
            android:gravity="center_vertical"
            android:layout_height="44dp">

            <TextView
                style="@style/MineTextStyle"
                android:text="@string/brief_introduction" />

            <TextView
                android:id="@+id/text_brief_introduction"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_centerVertical="true"
                android:gravity="right"
                android:layout_toLeftOf="@+id/image_right_3"
                android:maxLines="1"
                android:paddingLeft="20dp"
                android:ellipsize="end"
                android:src="@mipmap/app_logo"
                android:text="未填"
                android:textColor="@color/exhibition_world_color"
                android:textSize="14sp" />
            <ImageView
                android:id="@+id/image_right_3"
                style="@style/MineRightImageStyle" />
        </LinearLayout>



        <RelativeLayout
            android:id="@+id/view_gender"
            style="@style/MineRelativeStyle"
            android:layout_marginTop="8dp"
            android:layout_height="44dp">

            <TextView
                style="@style/MineTextStyle"
                android:text="@string/gender" />

            <ImageView
                android:id="@+id/image_right_4"
                style="@style/MineRightImageStyle" />

            <TextView
                android:id="@+id/text_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/image_right_4"
                android:src="@mipmap/app_logo"
                android:text="@string/man"
                android:textColor="@color/exhibition_world_color"
                android:textSize="14sp" />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_color" />

        <RelativeLayout
            android:id="@+id/view_age"
            style="@style/MineRelativeStyle"
            android:layout_height="44dp">

            <TextView
                style="@style/MineTextStyle"
                android:text="@string/age" />

            <ImageView
                android:id="@+id/image_right_6"
                style="@style/MineRightImageStyle" />

            <TextView
                android:id="@+id/text_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/image_right_6"
                android:src="@mipmap/app_logo"
                android:text="23"
                android:textColor="@color/exhibition_world_color"
                android:textSize="14sp" />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_color" />

        <RelativeLayout
            android:id="@+id/view_region"
            style="@style/MineRelativeStyle"
            android:layout_height="44dp">

            <TextView
                style="@style/MineTextStyle"
                android:text="@string/region" />

            <ImageView
                android:id="@+id/image_right_5"
                style="@style/MineRightImageStyle" />

            <TextView
                android:id="@+id/text_region"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/image_right_5"
                android:src="@mipmap/app_logo"
                android:text="@string/beijing"
                android:textColor="@color/exhibition_world_color"
                android:textSize="14sp" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lin_chose"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent_40_black"
        android:gravity="bottom"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_paizhao"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/white"
            android:gravity="center"
            android:lineSpacingExtra="0sp"
            android:text="拍照"
            android:textColor="#16181a"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/line_color" />

        <TextView
            android:id="@+id/tv_xiangce"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/white"
            android:gravity="center"
            android:lineSpacingExtra="0sp"
            android:text="从相册选择"
            android:textColor="#16181a"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="8dip"
            android:background="@color/line_color" />

        <TextView
            android:id="@+id/tv_quxiao"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/white"
            android:gravity="center"
            android:lineSpacingExtra="0sp"
            android:text="取消"
            android:textColor="#16181a"
            android:textSize="16sp" />

    </LinearLayout>
</RelativeLayout>