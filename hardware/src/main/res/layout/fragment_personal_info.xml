<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical"
              android:paddingTop="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_color"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/white">

            <ImageView
                android:id="@+id/head_left_btn"
                style="@style/LeftImageStyle"/>

            <TextView
                android:id="@+id/tv_center"
                style="@style/HeadWordStyle"
                android:layout_centerInParent="true"
                android:text="名称"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/view_head_portrait"
            style="@style/MineRelativeStyle"
            android:layout_height="70dp">

            <TextView
                style="@style/MineTextStyle"
                android:text="@string/head_portrait"/>

            <ImageView
                android:id="@+id/image_right_1"
                style="@style/MineRightImageStyle"/>

            <RelativeLayout
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/image_right_1">

                <ImageView
                    android:id="@+id/image_head"
                    android:layout_width="44dp"
                    android:layout_height="44dp"/>
                <ImageView
                    android:layout_width="44dp"
                    android:src="@drawable/background_person"
                    android:layout_height="44dp"/>
            </RelativeLayout>


        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:background="@color/line_color"/>

        <RelativeLayout
            android:id="@+id/view_nickname"
            style="@style/MineRelativeStyle"
            android:layout_height="44dp">

            <TextView
                style="@style/MineTextStyle"
                android:text="@string/nickname"/>

            <ImageView
                android:id="@+id/image_right_2"
                style="@style/MineRightImageStyle"/>

            <TextView
                android:id="@+id/text_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/image_right_2"
                android:text="莉莉"
                android:textColor="@color/exhibition_world_color"
                android:textSize="14sp"/>

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:background="@color/line_color"/>

        <LinearLayout
            android:id="@+id/view_brief_introduction"
            style="@style/MineRelativeStyle"
            android:layout_height="44dp"
            android:gravity="center_vertical">

            <TextView
                style="@style/MineTextStyle"
                android:text="@string/brief_introduction"/>

            <TextView
                android:id="@+id/text_brief_introduction"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/image_right_3"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="right"
                android:maxLines="1"
                android:paddingLeft="20dp"
                android:text="未填"
                android:textColor="@color/exhibition_world_color"
                android:textSize="14sp"/>

            <ImageView
                android:id="@+id/image_right_3"
                style="@style/MineRightImageStyle"/>
        </LinearLayout>


        <RelativeLayout
            android:id="@+id/view_gender"
            style="@style/MineRelativeStyle"
            android:layout_height="44dp"
            android:layout_marginTop="8dp">

            <TextView
                style="@style/MineTextStyle"
                android:text="@string/gender"/>

            <ImageView
                android:id="@+id/image_right_4"
                style="@style/MineRightImageStyle"/>

            <TextView
                android:id="@+id/text_gender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/image_right_4"
                android:text="@string/man"
                android:textColor="@color/exhibition_world_color"
                android:textSize="14sp"/>

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:background="@color/line_color"/>

        <RelativeLayout
            android:id="@+id/view_age"
            style="@style/MineRelativeStyle"
            android:layout_height="44dp">

            <TextView
                style="@style/MineTextStyle"
                android:text="@string/age"/>

            <ImageView
                android:id="@+id/image_right_6"
                style="@style/MineRightImageStyle"/>

            <TextView
                android:id="@+id/text_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/image_right_6"
                android:text="23"
                android:textColor="@color/exhibition_world_color"
                android:textSize="14sp"/>

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:layout_marginLeft="12dp"
            android:background="@color/line_color"/>

        <RelativeLayout
            android:id="@+id/view_region"
            style="@style/MineRelativeStyle"
            android:layout_height="44dp">

            <TextView
                style="@style/MineTextStyle"
                android:text="@string/region"/>

            <ImageView
                android:id="@+id/image_right_5"
                style="@style/MineRightImageStyle"/>

            <TextView
                android:id="@+id/text_region"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/image_right_5"
                android:text="@string/beijing"
                android:textColor="@color/exhibition_world_color"
                android:textSize="14sp"/>

        </RelativeLayout>
    </LinearLayout>


</LinearLayout>