<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingTop="@dimen/padding_top"
    android:orientation="vertical">

    <include
        android:id="@+id/view_head"
        layout="@layout/activity_common_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_color">

        <RelativeLayout
            android:id="@+id/msg_set"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="10.7dp"
            android:background="@drawable/wt_view_click_background"
            android:clickable="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:text="@string/receive_message_push"
                android:textColor="@color/black_head_word"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/image_msg_set"
                android:layout_width="26.7dp"
                android:layout_height="17.3dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:src="@mipmap/on_switch" />

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>