<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/lin_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:background="@mipmap/avatar_p"
            android:padding="1dp">

            <ImageView
                android:id="@+id/img_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/lin_img"
            android:text="名称"
            android:textColor="@color/black_head_word"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/img_chat"
            android:layout_width="42.7dp"
            android:layout_height="42.7dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:src="@mipmap/chat_icon_call" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_lin"
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="@color/line_color"
        android:visibility="gone" />
</LinearLayout>
