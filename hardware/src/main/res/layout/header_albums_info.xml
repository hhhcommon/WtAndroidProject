<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="220dp">


    <ImageView
        android:id="@+id/ivPhotoBg"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:scaleType="centerCrop"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="#66000000"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivPhoto"
            android:layout_width="90.7dp"
            android:layout_height="90.7dp"
            android:layout_marginTop="70dp"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:id="@+id/lin_follow"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_below="@+id/ivPhoto"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:background="@drawable/anchor_personal_n"
            android:gravity="center_vertical"
            android:minWidth="100dp"
            android:orientation="horizontal"
            android:paddingLeft="16.7dp"
            android:paddingRight="16.7dp">

            <ImageView
                android:id="@+id/img_sub"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@mipmap/icon_subscription_n"/>

            <TextView
                android:id="@+id/tvFollow"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:gravity="center"
                android:text="订阅(01000)"
                android:textColor="#ffffff"
                android:textSize="14.7sp"/>
        </LinearLayout>

    </RelativeLayout>
</FrameLayout>
