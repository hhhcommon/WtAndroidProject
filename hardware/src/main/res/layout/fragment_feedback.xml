<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <ImageView
            android:id="@+id/head_left_btn"
            style="@style/LeftImageStyle"/>

        <TextView
            android:id="@+id/tv_center"
            android:text="@string/feed_back"
            android:layout_centerInParent="true"
            android:textColor="@color/black_head_word"
            style="@style/HeadWordStyle"/>

        <TextView
            android:id="@+id/tv_commit"
            android:text="@string/commit"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:textColor="@color/black_head_word"
            style="@style/HeadWordStyle"/>

    </RelativeLayout>

    <EditText
        android:id="@+id/edit_information"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:background="@color/white"
        android:hint="@string/edit_information"
        android:textColorHint="@color/gray_edit_hint_word"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:singleLine="true"
        android:textSize="20sp"
        android:textColor="@color/black_head_word"/>

    <EditText
        android:id="@+id/edit_feedback"
        android:layout_width="match_parent"
        android:layout_height="158dp"
        android:background="@color/white"
        android:hint="@string/edit_feedback"
        android:textColorHint="@color/gray_edit_hint_word"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:gravity="top"
        android:layout_marginTop="10dp"
        android:paddingTop="20dp"
        android:textSize="20sp"
        android:textColor="@color/black_head_word"/>

</LinearLayout>