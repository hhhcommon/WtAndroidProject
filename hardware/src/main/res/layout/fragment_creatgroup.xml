<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp">

            <ImageView
                android:id="@+id/head_left_btn"
                style="@style/LeftImageStyle" />

            <TextView
                android:id="@+id/tv_center"
                style="@style/HeadWordStyle"
                android:layout_centerInParent="true"
                android:text="创建群组" />


        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/line_color" />

        <ImageView
            android:id="@+id/img_url"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:src="@mipmap/create_group_icon_upload_avatar_n" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:lineSpacingExtra="0sp"
            android:text="点击上传群头像"
            android:textColor="#cccccd"
            android:textSize="12sp" />

        <EditText
            android:id="@+id/et_phoneNumber"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="26dp"
            android:background="@drawable/background_creatgroup_gray"
            android:hint="请输入群名称"
            android:paddingLeft="18dp"
            android:textColor="@color/black_head_word"
            android:textColorHint="@color/gray_edit_hint_word"
            android:textSize="14.7sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/background_creatgroup_gray"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_password"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginLeft="5dp"
                android:src="@mipmap/create_group_icon_selected_n" />

            <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/transparent_background"
                android:hint="设置进群密码(4位数字)"
                android:maxLength="8"
                android:textColor="@color/black_head_word"
                android:textColorHint="@color/gray_edit_hint_word"
                android:textSize="14.7sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/background_creatgroup_gray"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_shen"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginLeft="5dp"
                android:src="@mipmap/create_group_icon_selected_n" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="群主审核通过才可进群"
                android:textColor="#959698"
                android:textSize="14.7sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_send"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/background_circle_orange"
            android:gravity="center"
            android:text="提交"
            android:textColor="@color/white"
            android:textSize="14.7sp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/lin_chose"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent_40_black"
        android:gravity="bottom"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_paizhao"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/white"
            android:gravity="center"
            android:lineSpacingExtra="0sp"
            android:text="拍照"
            android:textColor="#16181a"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="@color/line_color" />

        <TextView
            android:id="@+id/tv_xiangce"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/white"
            android:gravity="center"
            android:lineSpacingExtra="0sp"
            android:text="从相册选择"
            android:textColor="#16181a"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="8dip"
            android:background="@color/line_color" />

        <TextView
            android:id="@+id/tv_quxiao"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@color/white"
            android:gravity="center"
            android:lineSpacingExtra="0sp"
            android:text="取消"
            android:textColor="#16181a"
            android:textSize="16sp" />

    </LinearLayout>
</RelativeLayout>
