<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:scrollbars="none">

    <LinearLayout
        android:id="@+id/view_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/fm_set"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:background="@drawable/wt_view_click_background"
            android:clickable="true">

            <TextView
                android:id="@+id/text_fm_set"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:text="@string/fm_settings"
                android:textColor="@color/black_head_word"
                android:textSize="20sp"/>

            <ImageView
                android:id="@+id/image_fm_set"
                android:layout_width="34dp"
                android:layout_height="24dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:src="@mipmap/on_switch"/>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/view_fm_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginTop="26dp"
                android:orientation="horizontal"
                android:paddingLeft="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/custom_frequency"
                    android:textColor="@color/black_head_word"
                    android:textSize="20sp"/>

                <com.wotingfm.common.view.LineEditText
                    android:id="@+id/edit_fm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="80dp"
                    android:background="@color/white"
                    android:maxLines="1"
                    android:textSize="20sp"
                    android:maxLength="6"
                    android:textColor="@color/black_head_word"
                    android:digits="0123456789."
                    android:gravity="center"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textColor="@color/black_head_word"
                    android:textSize="20sp"
                    android:text="@string/hz"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:gravity="center_vertical"
                android:paddingLeft="16dp"
                android:textColor="@color/black_head_word"
                android:text="@string/recommended_frequency"
                android:textSize="18sp"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>