<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/background_color"
        android:gravity="center_vertical">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_centerInParent="true">

            <LinearLayout
                android:layout_width="81dp"
                android:layout_height="42dp"
                android:layout_marginRight="8dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_chat"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="聊 天"
                    android:textColor="@color/black_head_word"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/line_chat"
                    android:layout_width="50dp"
                    android:layout_height="2dp"
                    android:background="@color/gray_edit_hint_word" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="81dp"
                android:layout_height="42dp"
                android:layout_marginLeft="8dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_linkman"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="通讯录"
                    android:textColor="@color/app_basic"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/line_linkman"
                    android:layout_width="50dp"
                    android:layout_height="2dp"
                    android:background="@color/app_basic" />
            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/img_more"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/login_icon_password_look" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_edit_hint_word" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:flipInterval="30"
        android:persistentDrawingCache="animation" />

</LinearLayout>