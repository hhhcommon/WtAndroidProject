<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLiveBase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/tvLiveNub"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center|left"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="正在直播中"
            android:textColor="#16181a"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/linearLive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearDiscountBase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="41dp">

            <TextView
                android:id="@+id/tvSendNub"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:text="名称"
                android:textColor="#16181a"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="24dp"
                android:layout_alignParentRight="true"
                android:layout_height="24dp"
                android:layout_marginRight="8dp"
                android:layout_centerVertical="true"
                android:src="@mipmap/discount_icon_mores" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:background="@color/line_color" />

        <LinearLayout
            android:id="@+id/linearDiscount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearSendBase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="gone">

        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="#f7f7f7" />

        <TextView
            android:id="@+id/tvSendDiscountNub"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center|left"
            android:gravity="center|left"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="Amine"
            android:textColor="#16181a"
            android:textSize="14sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:background="@color/line_color" />

        <LinearLayout
            android:id="@+id/linearSendDiscount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </LinearLayout>
</LinearLayout>
