<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linearLiveBase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="12dp"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center|left"
            android:lineSpacingExtra="0sp"
            android:text="正在直播中"
            android:textColor="#16181a"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/linearLive"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearDiscountBase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/tvSendNub"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:drawableRight="@mipmap/discount_icon_mores"
            android:gravity="center|left"
            android:padding="12dp"
            android:text="TA发布的专辑(23)"
            android:textColor="#16181a"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/linearDiscount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearSendBase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="gone">

        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="#f7f7f7" />

        <TextView
            android:id="@+id/tvSendDiscountNub"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center|left"
            android:lineSpacingExtra="0sp"
            android:padding="12dp"
            android:text="TA发布的节目(23)"
            android:textColor="#16181a"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/linearSendDiscount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </LinearLayout>
</LinearLayout>
