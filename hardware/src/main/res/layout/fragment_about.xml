<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingTop="@dimen/padding_top"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <ImageView
            android:id="@+id/head_left_btn"
            style="@style/LeftImageStyle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="关于"
            android:textColor="@color/black"
            android:textSize="17sp" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="@color/line_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image_logo"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="36dp"
                android:src="@mipmap/logo" />

            <TextView
                android:id="@+id/text_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/image_logo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="24dp"
                android:text="我听FM"
                android:textColor="@color/typeface_color"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/text_news"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10.7dp"
                android:text="听我享听，讲我享讲"
                android:textColor="#313140"
                android:textSize="10.7sp" />

            <TextView
                android:id="@+id/tv_verson"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_news"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="36dp"
                android:layout_marginTop="48dp"
                android:text="版本号：V 0.1.0"
                android:textColor="#959698"
                android:textSize="10.7sp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="216dp"
            android:background="#f7f7f7"
            android:gravity="bottom|center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="联系我们"
                android:textColor="#959698"
                android:layout_marginBottom="13dp"
                android:textSize="10.7sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email：Wtfm@woting.com"
                android:textColor="#959698"
                android:layout_marginBottom="5.3dp"
                android:textSize="10.7sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="QQ：888888888"
                android:textColor="#959698"
                android:layout_marginBottom="54.7dp"
                android:textSize="10.7sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="使用条款和隐私政策"
                android:textColor="#b9babf"
                android:layout_marginBottom="4dp"
                android:textSize="8sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:text="CopyRight @ 2017 WotingRadio,  All Rights Reserved"
                android:textColor="#b9babf"
                android:textSize="8sp" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>