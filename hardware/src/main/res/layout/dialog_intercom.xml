<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/transparent_background">

    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="237dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="top|right"
            android:layout_marginRight="20dp"
            android:background="@mipmap/intercom_dialog_sanjiao" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/background_intercom_dialog_black"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_addFriend"
                android:layout_width="120dp"
                android:layout_height="45dp"
                android:gravity="center"
                android:padding="10dp"
                android:text="添加好友"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#323232" />

            <TextView
                android:id="@+id/tv_addGroup"
                android:layout_width="120dp"
                android:layout_height="45dp"
                android:gravity="center"
                android:padding="10dp"
                android:text="加入群组"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#323232" />

            <TextView
                android:id="@+id/tv_createGroup"
                android:layout_width="120dp"
                android:layout_height="45dp"
                android:gravity="center"
                android:padding="10dp"
                android:text="创建群组"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#323232" />

            <TextView
                android:id="@+id/tv_scanning"
                android:layout_width="120dp"
                android:layout_height="45dp"
                android:gravity="center"
                android:padding="10dp"
                android:text="扫一扫"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#323232" />

            <TextView
                android:id="@+id/tv_intercom"
                android:layout_width="120dp"
                android:layout_height="45dp"
                android:gravity="center"
                android:padding="10dp"
                android:text="模拟对讲"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#323232" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>