<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingTop="20dp"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <ImageView
            android:id="@+id/head_left_btn"
            style="@style/LeftImageStyle" />

        <TextView
            android:id="@+id/tv_center"
            style="@style/HeadWordStyle"
            android:layout_centerInParent="true"
            android:text="备注" />

        <TextView
            android:id="@+id/tv_send"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:lineSpacingExtra="0sp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="确定"
            android:textColor="@color/black_head_word"
            android:textSize="16sp" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="@color/line_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/line_color"
        android:orientation="vertical">


        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:gravity="top"
            android:hint="给自己起一个美丽的名称吧"
            android:lineSpacingExtra="2sp"
            android:maxLength="20"
            android:maxLines="1"
            android:paddingLeft="12dp"
            android:paddingTop="12dp"
            android:textColor="@color/black_head_word"
            android:textColorHint="@color/gray_edit_hint_word"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et_introduce"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:gravity="top"
            android:hint="给自己写一句优雅的介绍吧"
            android:lineSpacingExtra="2sp"
            android:maxLength="20"
            android:maxLines="1"
            android:paddingBottom="12dp"
            android:paddingLeft="12dp"
            android:paddingTop="12dp"
            android:textColor="@color/black_head_word"
            android:textColorHint="@color/gray_edit_hint_word"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et_age"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:gravity="top"
            android:hint="0-100"
            android:inputType="number"
            android:lineSpacingExtra="2sp"
            android:maxLength="20"
            android:paddingLeft="12dp"
            android:paddingTop="12dp"
            android:textColor="@color/black_head_word"
            android:textColorHint="@color/gray_edit_hint_word"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>
