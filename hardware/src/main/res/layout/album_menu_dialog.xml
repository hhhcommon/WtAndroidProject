<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/largeLabel"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1.0"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/tvAnchor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1.0"
            android:drawablePadding="12dp"
            android:drawableTop="@mipmap/music_play_icon_anchor"
            android:gravity="center"
            android:text="主播"
            android:textColor="#16181a"
            android:textSize="13.3sp" />

        <TextView
            android:id="@+id/tvReport"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1.0"
            android:drawablePadding="12dp"
            android:drawableTop="@mipmap/music_play_icon_report"
            android:gravity="center"
            android:text="举报"
            android:textColor="#16181a"
            android:textSize="13.3sp" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1.0"
            android:drawablePadding="12dp"
            android:drawableTop="@mipmap/music_play_icon_like_s"
            android:gravity="center"
            android:text="喜欢"
            android:textColor="#16181a"
            android:visibility="invisible"
            android:textSize="13.3sp" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1.0"
            android:drawablePadding="12dp"
            android:drawableTop="@mipmap/music_play_icon_like_s"
            android:gravity="center"
            android:text="喜欢"
            android:textColor="#16181a"
            android:visibility="invisible"
            android:textSize="13.3sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_marginTop="20dp"
        android:background="@color/line_color" />

    <TextView
        android:id="@+id/tvClose"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="取消"
        android:background="@drawable/wt_view_click_background"
        android:textColor="#16181a"
        android:textSize="16sp" />
</LinearLayout>