<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/largeLabel"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1.0"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvLike"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.0"
                android:drawablePadding="12dp"
                android:drawableTop="@mipmap/music_play_icon_like_s"
                android:gravity="center"
                android:text="喜欢"
                android:textColor="#16181a"
                android:textSize="13.3sp" />

            <TextView
                android:id="@+id/tvAlbums"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.0"
                android:drawablePadding="12dp"
                android:drawableTop="@mipmap/music_play_icon_albums"
                android:gravity="center"
                android:text="专辑"
                android:textColor="#16181a"
                android:textSize="13.3sp" />

            <TextView
                android:id="@+id/tvAnchor"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.0"
                android:drawablePadding="12dp"
                android:drawableTop="@mipmap/music_play_icon_anchor"
                android:gravity="center"
                android:text="主播"
                android:textColor="#16181a"
                android:textSize="13.3sp" />

            <TextView
                android:id="@+id/tvReport"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.0"
                android:drawablePadding="12dp"
                android:drawableTop="@mipmap/music_play_icon_report"
                android:gravity="center"
                android:text="举报"
                android:textColor="#16181a"
                android:textSize="13.3sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="16dp"
            android:layout_weight="1.0"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvDownload"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.0"
                android:drawablePadding="12dp"
                android:drawableTop="@mipmap/music_play_icon_download"
                android:gravity="center"
                android:text="下载"
                android:textColor="#16181a"
                android:textSize="13.3sp" />

            <TextView
                android:id="@+id/tvAgo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.0"
                android:drawablePadding="12dp"
                android:drawableTop="@mipmap/music_play_icon_ago"
                android:gravity="center"
                android:text="播放历史"
                android:textColor="#16181a"
                android:textSize="13.3sp" />

            <TextView
                android:id="@+id/tvSubscription"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.0"
                android:drawablePadding="12dp"
                android:drawableTop="@mipmap/music_play_icon_subscription"
                android:gravity="center"
                android:text="我的订阅"
                android:textColor="#16181a"
                android:textSize="13.3sp" />

            <TextView
                android:id="@+id/tvLocal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.0"
                android:drawablePadding="12dp"
                android:drawableTop="@mipmap/music_play_icon_local"
                android:gravity="center"
                android:text="本地音频"
                android:textColor="#16181a"
                android:textSize="13.3sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/largeLabel2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:visibility="gone"
            android:layout_weight="1.0"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvRadio"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.0"
                android:drawablePadding="12dp"
                android:drawableTop="@mipmap/music_play_icon_anchor"
                android:gravity="center"
                android:text="电台"
                android:textColor="#16181a"
                android:textSize="13.3sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.0"
                android:drawablePadding="12dp"
                android:drawableTop="@mipmap/music_play_icon_albums"
                android:gravity="center"
                android:text="专辑"
                android:visibility="invisible"
                android:textColor="#16181a"
                android:textSize="13.3sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.0"
                android:drawablePadding="12dp"
                android:drawableTop="@mipmap/music_play_icon_anchor"
                android:gravity="center"
                android:text="主播"
                android:visibility="invisible"
                android:textColor="#16181a"
                android:textSize="13.3sp" />

            <TextView
                android:layout_width="0dp"
                android:visibility="invisible"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.0"
                android:drawablePadding="12dp"
                android:drawableTop="@mipmap/music_play_icon_report"
                android:gravity="center"
                android:text="举报"
                android:textColor="#16181a"
                android:textSize="13.3sp" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="@color/line_color" />

    <TextView
        android:id="@+id/tvClose"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="取消"
        android:background="@drawable/wt_view_click_background"
        android:textColor="#16181a"
        android:textSize="16sp" />
</LinearLayout>