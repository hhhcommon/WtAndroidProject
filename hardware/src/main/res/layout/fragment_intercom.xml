<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/img_person"
            android:layout_width="44dp"
            android:layout_marginLeft="2dp"
            android:src="@mipmap/nav_icon_center_black"
            android:layout_height="44dp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_chat"
                android:layout_width="wrap_content"
                android:layout_height="42.5dp"
                android:text="聊天"
                android:gravity="center"
                android:textColor="@color/black_head_word"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/line_chat"
                android:layout_width="30dp"
                android:layout_height="2dp"
                android:visibility="invisible"
                android:background="@color/app_basic" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:gravity="center"
            android:layout_marginLeft="42.5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_linkman"
                android:layout_width="wrap_content"
                android:layout_height="42.5dp"
                android:gravity="center"
                android:text="通讯录"
                android:textColor="@color/app_basic"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/line_linkman"
                android:layout_width="45dp"
                android:layout_height="2dp"
                android:background="@color/app_basic" />
        </LinearLayout>
        </LinearLayout>
        <ImageView
            android:id="@+id/img_more"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="2dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/chat_icon_addmore" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/line_color" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:flipInterval="30"
        android:persistentDrawingCache="animation" />

</LinearLayout>