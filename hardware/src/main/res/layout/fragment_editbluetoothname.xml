<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:paddingTop="20dp"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <ImageView
            android:id="@+id/head_left_btn"
            style="@style/LeftImageStyle" />

        <TextView
            android:id="@+id/tv_center"
            style="@style/HeadWordStyle"
            android:layout_centerInParent="true"
            android:text="修改名称" />

        <TextView
            android:id="@+id/tv_send"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingRight="12dp"
            android:paddingLeft="12dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:lineSpacingExtra="0sp"
            android:text="确定"
            android:textColor="@color/black_head_word"
            android:textSize="16sp" />
    </RelativeLayout>

    <include layout="@layout/include_tv" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/line_color"
        android:orientation="vertical">


        <EditText
            android:id="@+id/et_news"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:gravity="top"
            android:lineSpacingExtra="2sp"
            android:paddingLeft="12dp"
            android:maxLength="20"
            android:text="蓝牙名称"
            android:maxLines="1"
            android:singleLine="true"
            android:paddingTop="12dp"
            android:textColor="@color/black_head_word"
            android:textSize="14sp" />
        <TextView
            android:layout_width="match_parent"
            android:textSize="12sp"
            android:paddingRight="12dp"
            android:paddingLeft="12dp"
            android:layout_below="@+id/et_news"
            android:text="在使用蓝牙设备操作时，会看到您的蓝牙名称"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>
