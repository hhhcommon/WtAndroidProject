<com.woting.commonplat.widget.LoadFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/loadLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_above="@+id/view"
    android:layout_below="@+id/relatTop"
    android:layout_gravity="center"
    android:background="#16181a"
    app:errorView="@layout/layout_error_view"
    app:loadingView="@layout/layout_loading_view">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#16181a"
        android:orientation="vertical">


        <android.support.v7.widget.RecyclerView
            android:id="@+id/mRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="22dp"
            android:scrollbars="none" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_video_starttime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="8dp"
                android:gravity="center"
                android:text="00:00:00"
                android:textColor="#40ffffff"
                android:textSize="11sp" />

            <SeekBar
                android:id="@+id/seekbar_video"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:maxHeight="2dp"
                android:minHeight="2dp"
                android:progressDrawable="@drawable/seebar_style"
                android:thumb="@drawable/ic_slider_white" />

            <TextView
                android:id="@+id/txt_video_totaltime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
                android:text="00:00:00"
                android:textColor="#40ffffff"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivBefore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/music_play_icon_before_gray" />

            <ImageView
                android:id="@+id/ivPause"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="33.3dp"
                android:layout_marginRight="33.3dp"
                android:src="@mipmap/music_play_icon_pause" />

            <ImageView
                android:id="@+id/ivNext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/music_play_icon_next" />
        </LinearLayout>
    </LinearLayout>
</com.woting.commonplat.widget.LoadFrameLayout>