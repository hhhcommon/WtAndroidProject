<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingTop="20dp">

    <include
        android:id="@+id/view_head"
        layout="@layout/common_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="信号强度"
            android:textColor="#16181a"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_signal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:layout_weight="1"
            android:gravity="right"
            android:lineSpacingExtra="1.3sp"
            android:text="弱"
            android:textColor="#959698"
            android:textSize="14.7sp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="@color/line_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="加密类型"
            android:textColor="#16181a"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_encryption"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="right"
            android:lineSpacingExtra="1.3sp"
            android:maxLines="1"
            android:text="WPA/WPA2"
            android:textColor="#959698"
            android:textSize="14.7sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_color"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edit_psw"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginBottom="13.3dp"
            android:layout_marginTop="13.3dp"
            android:background="@color/white"
            android:hint="@string/please_input_password"
            android:inputType="textPassword"
            android:maxLength="18"
            android:maxLines="1"
            android:paddingLeft="12dp"
            android:textColor="#16181a"
            android:textColorHint="@color/gray_edit_hint_word"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/btn_confirm"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/wt_view_click_background"
            android:gravity="center"
            android:text="连接"
            android:textColor="@color/app_basic"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:background="@color/line_color" />

        <TextView
            android:id="@+id/btn_cancel"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:background="@drawable/wt_view_click_background"
            android:gravity="center"
            android:text="@string/cancel"
            android:textColor="@color/black_head_word"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>
