<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center|top"
    android:gravity="center"
    android:orientation="vertical">

    <com.mcxtzhang.swipemenulib.SwipeMenuLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/swipeable_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:clickable="true"
        app:ios="false"
        app:leftSwipe="true"
        app:swipeEnable="true">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:id="@+id/largeLabel"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="12dp"
            android:paddingRight="12dp">

            <ImageView
                android:id="@+id/ivPhoto"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_centerVertical="true"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="12dp"
                android:scaleType="centerCrop" />

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_toRightOf="@+id/ivPhoto"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/parentPanel"
                android:layout_marginLeft="10dp"
                android:gravity="center|left"
                android:orientation="vertical"
                android:paddingBottom="2dp"
                android:paddingTop="2dp">

                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text="AmineTitle"
                    android:textColor="#16181a"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tvContent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_marginTop="4dp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:gravity="center|left"
                    android:text="发现更多节目"
                    android:textColor="#959698"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tvTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_marginTop="6dp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:gravity="center|left"
                    android:text="发现更多节目"
                    android:textColor="#959698"
                    android:textSize="12sp" />
            </LinearLayout>

            <ProgressBar
                android:id="@+id/parentPanel"
                style="@style/progressbar_style1"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <TextView
            android:id="@+id/btnDelete"
            android:layout_width="66dp"
            android:layout_height="85dp"
            android:background="#ed4a4a"
            android:gravity="center"
            android:text="删除"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </com.mcxtzhang.swipemenulib.SwipeMenuLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="#efefef" />
</LinearLayout>
